{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "no-unused-vars": "error",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": [
      "warn",
      {
        "additionalHooks": "(useRecoilCallback|useRecoilTransaction_UNSTABLE)"
      }
    ]
  }
}